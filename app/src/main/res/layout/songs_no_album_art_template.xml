<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp" >

        <TextView
            android:id="@+id/songs_no_album_art_template_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="48"
            android:maxLines="1"
            android:text="Song Name"
            android:textColor="@color/cream"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/songs_no_album_art_template_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songs_no_album_art_template_song_name"
            android:maxLength="40"
            android:maxLines="1"
            android:text="Song Name"
            android:textColor="@color/pink"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>