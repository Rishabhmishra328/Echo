<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="216dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_art_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/information_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000">

        <TextView
            android:id="@+id/song_name_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/song_artist_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_name_notification"
            android:layout_centerHorizontal="true"
            android:text="Song Artist"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/previous_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/previous" />

        <ImageView
            android:id="@+id/play_pause_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/play" />

        <ImageView
            android:id="@+id/next_notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/next" />

    </LinearLayout>

</RelativeLayout>